<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="userData"
            type="com.droidmob.zohousers.repository.dto.common.UserData"/>
    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="2dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp">

            <ImageView
                android:id="@+id/userThumbnail"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/ic_user_place_holder" />

            <TextView
                android:id="@+id/userId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:text="@{String.valueOf(userData.id), default= `#1`}"
                app:layout_constraintBottom_toBottomOf="@+id/userThumbnail"
                app:layout_constraintStart_toEndOf="@+id/userThumbnail"
                app:layout_constraintTop_toTopOf="@+id/userThumbnail"
                app:layout_constraintVertical_bias="0.29000002" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:text="@{String.format(`%s %s`, userData.firstName, userData.lastName), default=`Guru Karthi`}"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/userThumbnail"
                app:layout_constraintStart_toEndOf="@+id/userThumbnail"
                app:layout_constraintTop_toBottomOf="@+id/userId"
                app:layout_constraintVertical_bias="0.0" />
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</layout>